{
  "variables": {
    "azure_client_id": "{{env `ARM_CLIENT_ID`}}",
    "azure_client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "azure_tenant_id": "{{env `ARM_TENANT_ID`}}",
    "azure_subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}"
  },
  "builders": [{
    "type": "azure-arm",
    "client_id": "{{user `azure_client_id`}}",
    "client_secret": "{{user `azure_client_secret`}}",
    "tenant_id": "{{user `azure_tenant_id`}}",
    "subscription_id": "{{user `azure_subscription_id`}}",
    "managed_image_resource_group_name": "TemplatePackerGenerator",
    "managed_image_name": "ansibleserverImage",
    "os_type": "Linux",
    "image_publisher": "Canonical",
    "image_offer": "UbuntuServer",
    "image_sku": "18.04-LTS",
    "location": "westeurope",
    "vm_size": "Standard_B1s"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-add-repository ppa:ansible/ansible -y",
      "sudo apt-get update -y",
      "sudo apt-get install ansible -y",
      "sudo apt-get install python -y",
      "sudo apt-get install python-pip -y",
      "sudo apt-get install jq -y"
    ]
  }]
}
